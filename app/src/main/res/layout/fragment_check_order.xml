<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <variable
            name="viewModel"
            type="com.framgia.forder.screen.ordermanagement.checkorder.CheckOrderViewModel"
            />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_stroke"
        android:orientation="vertical"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="@string/step_one_check_order"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                />

        </android.support.v7.widget.CardView>
        <ExpandableListView
            android:id="@+id/expand_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footer"
            android:layout_below="@+id/header"
            android:scrollbars="none"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                >

                <ImageButton
                    android:id="@+id/button_select_all"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/ic_select_all"
                    />

                <ImageButton
                    android:id="@+id/button_accept"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toRightOf="@+id/button_select_all"
                    android:background="@drawable/ic_accept"
                    />

                <ImageButton
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/button_accept"
                    android:layout_toRightOf="@+id/button_accept"
                    android:background="@drawable/ic_reject"
                    />

                <Button
                    android:id="@+id/button_continue"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_blue"
                    android:text="@string/continue_check"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    />
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>
